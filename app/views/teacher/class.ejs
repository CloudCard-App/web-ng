<!doctype html>
<html>
<head>
    <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>
    <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
</head>
<body>
<div class="container">
    <div class="page-header text-center">
        <h1><%= className %></h1>
    </div>

    <ul class="nav nav-tabs nav-justified">
        <li role="presentation" class="active"><a data-toggle="tab" href="#deckList">Decks</a></li>
        <li role="presentation"><a data-toggle="tab" href="#studentList">Students</a></li>
    </ul>

    <div class="tab-content">
        <div id="deckList" class="tab-pane fade in active">
            <h3>Decks</h3>
            <ul class="nav nav-tabs nav-justified">
                <% for (let i = 0; i < decks.length; i++) { %>
                <% let href = '#' + decks[i].name %>
                <li role="presentation"><a data-toggle="tab" href=<%= href %>><%= decks[i].name %></a></li>
                <% } %>
            </ul>

            <div class="tab-content">
                <% for (let i = 0; i < decks.length; i++) { %>
                <div id=<%= decks[i].name %> class="tab-pane fade">
                    <h3><%= decks[i].name %></h3>
                    <p>cards</p>
                </div>
                <% } %>
            </div>
        </div>
        <div id="studentList" class="tab-pane fade">
            <h3>Students</h3>
        </div>
    </div>
</div>
</body>
</html>